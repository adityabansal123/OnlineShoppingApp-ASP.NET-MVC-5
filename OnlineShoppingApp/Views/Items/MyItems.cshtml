@model OnlineShoppingApp.ViewModels.ItemsViewModel

@{
    ViewBag.Title = "MyItems";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-header">My Items</h2>

<div class="col-md-12">
    <table id="items" class=" table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Price</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td><a href="@Url.Action("Edit", "Items", new { id = item.Id })">@item.Name</a> </td>
                    <td>@item.Description</td>
                    <td>@item.Category.Name</td>
                    <td>@item.Price</td>
                    <td><a class="js-delete" data-item-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".js-delete").click(function (e) {
                var button = $(e.target);

                bootbox.confirm("Are you sure you want to delete this item?", function (result) {
                    if (result)
                    {
                        $.ajax({
                            url: "/api/Items/" + button.attr("data-item-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });

            });
        });
    </script>
}

