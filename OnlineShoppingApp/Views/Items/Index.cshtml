@model OnlineShoppingApp.ViewModels.ItemsViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="page-header">Items</h2>
<div class="col-md-2">
    <ul id="categories" class="list-group">
        @foreach (var category in Model.Categories)
        {
            <li class="list-group-item">@Html.ActionLink(@category.Name, "Filtered", new { categoryId = category.Id })</li>
        }
    </ul>
</div>
<div class="col-md-10">
    <table id="items" class=" table table-bordered table-hover col-md-10">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Price</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Category.Name</td>
                    <td>$@(item.Price)</td>
                    <td>@Html.ActionLink("Details", "Details", new { id = item.Id } )</td>
                </tr>
            }
        </tbody>
    </table>
</div>